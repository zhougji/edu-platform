# 服务器配置
PORT=5000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/edu-platform

# JWT配置 
JWT_SECRET=edu-platform-secret-key-replace-in-production
JWT_EXPIRE=7d

# 邮件服务配置
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@eduplatform.com

# DeepSeek AI配置
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_API_KEY=your-deepseek-api-key

# 上传目录
UPLOAD_DIR=uploads

# CORS 配置
CLIENT_URL=http://localhost:8080

# 添加子域名配置
STUDENT_DOMAIN=student.qimingyu.xyz
TEACHER_DOMAIN=teacher.qimingyu.xyz

# 更新CORS设置，允许子域名
ALLOWED_ORIGINS=https://qimingyu.xyz,https://www.qimingyu.xyz,https://student.qimingyu.xyz,https://teacher.qimingyu.xyz 